---
import '../styles/global.css';

interface TOCItem {
  depth: number;
  text: string;
  slug: string;
}

interface SidebarLink {
  title: string;
  href: string;
}

interface Props {
  title?: string;
  sidebarLinks: SidebarLink[];
  tableOfContents?: TOCItem[]; // Use ? if it's optional
}

const { title, sidebarLinks, tableOfContents } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL} + favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="flex mt-12.5">
      <header
        class="fixed top-0 left-0 w-full h-12.5 bg-[#333] flex items-center px-4 z-999 text-white"
      >
        <a href="/docs">HeyDoc! üë®üèª‚Äç‚öïÔ∏è</a>
        <!-- <Search id="Search" /> -->
      </header>
      <aside class="fixed top-12.5 left-0">
        <nav>
          {sidebarLinks && sidebarLinks.map((link) => <a href={link.href}>{link.title}</a>)}
        </nav>
      </aside>
      <div class="mx-50 p-1rem box-border w-full">
        <slot />
      </div>
      <aside class="fixed top-12.5 right-0">
        <!-- Right sidebar content can go here -->
        <nav>
          {
            tableOfContents &&
              tableOfContents.map((item) => (
                <a href={`#${item.slug}`} style={`margin-left: ${(item.depth - 1) * 10}px`}>
                  {item.text}
                </a>
              ))
          }
        </nav>
      </aside>
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: calc(100% - 3.125rem);
  }
  aside {
    width: 12.5rem;
    background: #f4f4f4;
    padding: 1rem;
    box-sizing: border-box;
    height: calc(100% - 3.125rem);
  }

  aside nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    height: 100%;
    overflow-y: auto;
  }
</style>
