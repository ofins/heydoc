---
import '../styles/global.css';

interface TOCItem {
  depth: number;
  text: string;
  slug: string;
}

interface SidebarLink {
  title: string;
  href: string;
}

interface Props {
  title?: string;
  sidebarLinks: SidebarLink[];
  tableOfContents?: TOCItem[]; // Use ? if it's optional
  lastUpdated?: string | null;
  author?: string;
  commitHash?: string | null;
}

const { title, sidebarLinks, tableOfContents, lastUpdated, author, commitHash } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL} + favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="flex mt-12.5">
      <header
        class="fixed top-0 left-0 w-full h-12.5 bg-slate-800 flex items-center px-4 z-50 text-white shadow-lg border-b border-slate-600"
      >
        <a href="/docs" class="text-lg font-semibold hover:text-slate-300 transition-colors"
          >HeyDoc! üë®üèª‚Äç‚öïÔ∏è</a
        >
        <!-- <Search id="Search" /> -->
      </header>
      <aside
        class="fixed top-12.5 left-0 w-50 bg-slate-700 text-white p-4 overflow-y-auto h-[calc(100vh-3.125rem)]"
      >
        <nav class="space-y-2">
          {
            sidebarLinks &&
              [...sidebarLinks]
                .sort((a, b) => a.title.localeCompare(b.title))
                .map((link) => (
                  <a
                    href={link.href}
                    class={`block py-2 px-3 rounded transition-colors text-sm ${
                      link.href === Astro.url.pathname ? 'bg-slate-600' : 'hover:bg-slate-600'
                    }`}
                  >
                    {link.title}
                  </a>
                ))
          }
        </nav>
      </aside>
      <div
        class="ml-50 mr-50 p-6 box-border w-full bg-gray-50 min-h-screen prose prose-slate max-w-none"
      >
        <slot />
      </div>
      <aside
        class="fixed top-12.5 right-0 w-50 bg-slate-700 text-white p-4 overflow-y-auto h-[calc(100vh-3.125rem)]"
      >
        <!-- Right sidebar content can go here -->
        <nav class="space-y-1">
          {
            tableOfContents &&
              tableOfContents.map((item) => (
                <a
                  href={`#${item.slug}`}
                  class="block py-1 px-3 rounded hover:text-slate-400 transition-colors text-sm toc-link"
                  style={`margin-left: ${(item.depth - 1) * 10}px`}
                >
                  {item.text}
                </a>
              ))
          }
        </nav>
      </aside>
    </main>
  </body>
</html>

<style>
  <style > html,
  body {
    margin: 0;
    width: 100%;
    height: calc(100% - 3.125rem);
  }
</style>
